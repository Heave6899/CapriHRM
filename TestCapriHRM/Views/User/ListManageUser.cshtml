@model IEnumerable<ViewModel.UserModelList>
@{
    ViewBag.Title = "List";
}
@section styles{
    <!-- DataTables -->
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}
<!-- Content Header (Page header) -->
<br />
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Users&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</h3>
                    <div class="row"><div class="col-md-6 offset-6"><input type="button" value="Add" class="btn btn-default btn-block" onclick="location.href='@Url.Action("CreateUser", "User", new { @id = 0 })'" /></div></div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="Userlist" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sr.No.</th>
                                <th>First Name</th>
                                <th>Role Name</th>
                                <th> User Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int No = 0;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(No=No+1)</td>
                                    <td>@item.EmployeeName</td>
                                    <td>@item.RoleName</td>
                                    <td>@item.UserName</td>

                                    @if (item.RoleName == "Admin")
                                    {
                                        <td class="justify-content-center" align="center"> &nbsp;&nbsp; &nbsp;&nbsp;&nbsp;@Html.Label("---")</td>

                                    }

                                    else
                                    {
                                        <td align="center">
                                            @{Html.RenderAction("GridButton", "User", new { @controllname = "User", @actionname = "ListManageUser", @id = item.UserId, @deleteaction = "DeleteUser" });}
                                            @*@Html.ActionLink("ResetPassword", "ResetPasswordOfUser", "User", new { @id = item.UserId }, new { @onclick = "return confirm('Are sure wants to Reset Password?'); " })
                        @Html.ActionLink("Delete", "DeleteUser", "User", new { @id = item.UserId }, new { @onclick = "return confirm('Are sure wants to delete?'); " })*@
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

@section scripts{

    <!-- DataTables -->
    <script src="~/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <!-- page script -->
    <script>
        $(function () {
            //$("#example1").DataTable();
            $('#Userlist').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
            });
        });
    </script>

}

