@model ViewModel.LeaveBalanceMasterModel

@{
    ViewBag.Title = "LeaveBalance";
}
@section styles{
    <!-- DataTables -->
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Leave Balance</h1>
            </div>
        </div>
    </div>
</section>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.leaveBalanceModel.LeaveBalanceid)
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="form-group">
                    @Html.LabelFor(model => model.leaveBalanceModel.EmployeeId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.leaveBalanceModel.EmployeeId, (IEnumerable<SelectListItem>)ViewBag.Employee, htmlAttributes: new { @class = "form-control", @autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.leaveBalanceModel.EmployeeId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    @Html.LabelFor(model => model.leaveBalanceModel.LeaveTypeId, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.leaveBalanceModel.LeaveTypeId, (IEnumerable<SelectListItem>)ViewBag.LeaveTypeId, htmlAttributes: new { @class = "form-control", @autocomplete = "no" })
                        @Html.ValidationMessageFor(model => model.leaveBalanceModel.LeaveTypeId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="form-group">
                    @Html.LabelFor(model => model.leaveBalanceModel.Year, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.leaveBalanceModel.Year, (IEnumerable<SelectListItem>)ViewBag.Year, htmlAttributes: new { @class = "form-control", @autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.leaveBalanceModel.Year, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    @Html.LabelFor(model => model.leaveBalanceModel.LeavesBalance, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.leaveBalanceModel.LeavesBalance, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.leaveBalanceModel.LeavesBalance, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
          
            <div class="col-md-5 offset-3">
                <div class="row ">
                    <div class="col-md-5">
                        <label class="btn-block">&nbsp;</label>
                        @{
                            var isUpdate = Model.leaveBalanceModel == null ? false : true;
                            Html.RenderAction("SubmitButton", "User", new { @controllname = "Leave", @actionname = "LeaveBalance", @IsUpdate = isUpdate });
                        }
                        @*<input type="submit" value="@(Model.roleModel==null ? "Add" : "Update")" class="btn btn-default btn-block" />*@
                    </div>
                      <div class="col-md-5 offset-1">
                            <label class="btn-block">&nbsp;</label>
                            @Html.ActionLink("Back To List", "ListLeaveBalance", "Leave",new { @id=0}, new { @class = "btn btn-default btn-block" })
                            @*<input type="submit" value="Clear" class="btn btn-default btn-block" />*@
                        </div>
                    
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
    <br />
}

@section scripts {
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <!-- DataTables -->
    
}

